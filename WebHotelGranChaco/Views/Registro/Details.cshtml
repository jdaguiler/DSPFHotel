@model WebHotelGranChaco.Dtos.DtoRegistro

@{
    ViewData["Title"] = "Detalles";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-3 mb-5 rounded">
            <h1>Detalles</h1>

            <div>
                <h4>Registro</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Fecha de Registro:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="FechaRegistro" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de Salida:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="FechaSalida" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Número de Habitación:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="NumeroHabitacion" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Número de Huéspedes:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="NumeroHuspedes" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Noches:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Noches" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Estado:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Estado" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Precio Total:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="PrecioTotal" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Cliente:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Cliente.Telefono" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Estado de la Habitación:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Habitacion.Estado" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Usuario:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Usuario.CorreoElectronico" class="form-control" readonly />
                    </dd>
                </dl>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id_Registro" class="btn btn-primary">Editar</a> |
                    <a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

