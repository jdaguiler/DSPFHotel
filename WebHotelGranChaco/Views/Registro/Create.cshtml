@model WebHotelGranChaco.Dtos.DtoRegistro
@{
    ViewData["Title"] = "Crear";
}
<head>
    <link rel="stylesheet" href="~/css/Cliente.css" asp-append-version="true" />
</head>
<br />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-3 mb-5 rounded">
            <h1>Datos de reserva</h1>
            <hr />
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaSalida" class="control-label">Fecha de Salida</label>
                        <input asp-for="FechaSalida" class="form-control" />
                        <span asp-validation-for="FechaSalida" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NumeroHuspedes" class="control-label">Número de Huéspedes</label>
                        <input asp-for="NumeroHuspedes" class="form-control" />
                        <span asp-validation-for="NumeroHuspedes" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Noches" class="control-label">Noches</label>
                        <input asp-for="Noches" class="form-control" />
                        <span asp-validation-for="Noches" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Estado" class="control-label">Estado</label>
                        <select asp-for="Estado" class="form-control">
                            <option value="Disponible">Disponible</option>
                            <option value="Ocupado">Ocupado</option>
                            <option value="Mantenimiento">Mantenimiento</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label asp-for="PrecioTotal" class="control-label">Precio Total</label>
                        <input asp-for="PrecioTotal" class="form-control" />
                        <span asp-validation-for="PrecioTotal" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="IdCliente" class="control-label">Telefono del cliente</label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="IdHabitacion" class="control-label">Habitación</label>
                        <select asp-for="IdHabitacion" class="form-control" asp-items="ViewBag.IdHabitacion">
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="NumeroHabitacion" class="control-label">Número de Habitación</label>
                        <input asp-for="NumeroHabitacion" class="form-control" />
                        <span asp-validation-for="NumeroHabitacion" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="IdUsuario" class="control-label">Usuario</label>
                        <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Crear</button>
                        <a asp-action="Index" class="btn btn-success">Volver al Listado</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
