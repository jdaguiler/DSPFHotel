@model WebHotelGranChaco.Dtos.DtoRegistro

@{
    ViewData["Title"] = "Editar registro";
}

<head>
    <link rel="stylesheet" href="~/css/Cliente.css" asp-append-version="true" />
</head>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-3 mb-5 rounded">
            <h1>Editar registro</h1>
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id_Registro" />

                <div class="mb-3">
                    <label for="FechaRegistro" class="form-label">Fecha de Registro</label>
                    <input asp-for="FechaRegistro" class="form-control" id="FechaRegistro" />
                    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="FechaSalida" class="form-label">Fecha de Salida</label>
                    <input asp-for="FechaSalida" class="form-control" id="FechaSalida" />
                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="NumeroHabitacion" class="form-label">Número de Habitación</label>
                    <input asp-for="NumeroHabitacion" class="form-control" id="NumeroHabitacion" />
                    <span asp-validation-for="NumeroHabitacion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="NumeroHuspedes" class="form-label">Número de Huéspedes</label>
                    <input asp-for="NumeroHuspedes" class="form-control" id="NumeroHuspedes" />
                    <span asp-validation-for="NumeroHuspedes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Noches" class="form-label">Número de Noches</label>
                    <input asp-for="Noches" class="form-control" id="Noches" />
                    <span asp-validation-for="Noches" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Estado" class="form-label">Estado</label>
                    <input asp-for="Estado" class="form-control" id="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="PrecioTotal" class="form-label">Precio Total</label>
                    <input asp-for="PrecioTotal" class="form-control" id="PrecioTotal" />
                    <span asp-validation-for="PrecioTotal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCliente" class="control-label"></label>
                    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdHabitacion" class="control-label"></label>
                    <select asp-for="IdHabitacion" class="form-control" asp-items="ViewBag.IdHabitacion"></select>
                    <span asp-validation-for="IdHabitacion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label"></label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-primary" asp-action="Index">Volver al Listado</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
