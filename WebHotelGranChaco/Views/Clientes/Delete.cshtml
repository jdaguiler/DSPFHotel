@model WebHotelGranChaco.Dtos.DtoCliente

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <div class="row justify-content-center">
        <h1>Eliminar cliente</h1>

        <h3>¿Estás seguro de eliminar este cliente?</h3>
        <div>
            <div class="col-md-6 shadow-sm p-3 mb-5 rounded">
                <h4>Detalles del cliente</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Nombre" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Apellido Paterno:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="ApellidoPaterno" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Apellido Materno:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="ApellidoMaterno" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Género:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Genero" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Documento de Identidad:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="DocumentoIdentidad" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Nacionalidad:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Nacionalidad" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        Teléfono:
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Telefono" class="form-control" readonly />
                    </dd>
                </dl>
                <form asp-action="Delete" asp-route-id="@Model.Id_Cliente" method="post">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-primary">Volver al listado</a>
                </form>
            </div>
        </div>
    </div>
</div>