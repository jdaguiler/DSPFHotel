@model WebHotelGranChaco.Dtos.DtoCliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<head>
    <link rel="stylesheet" href="~/css/Cliente.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 shadow-sm p-3 mb-5 rounded">
            <h1>Detalles del Cliente</h1>
            <hr />

            <dl class="row">
                <dt class="col-sm-2">
                    Nombre:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Nombre" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Apellido paterno:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="ApellidoPaterno" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Apellido materno:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="ApellidoMaterno" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Género:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Genero" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Documento de identidad:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="DocumentoIdentidad" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Nacionalidad:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Nacionalidad" class="form-control" readonly />
                </dd>
                <dt class="col-sm-2">
                    Teléfono:
                </dt>
                <dd class="col-sm-10">
                    <input asp-for="Telefono" class="form-control" readonly />
                </dd>
            </dl>

            <div>
                <a asp-action="Edit" class="btn btn-primary"  asp-route-id="@Model.Id_Cliente">Editar</a> |
                <a asp-action="Index" class="btn btn-primary">Volver al listado</a>
            </div>
        </div>
    </div>
</div>
