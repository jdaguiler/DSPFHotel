@{
    var isAuthenticated = Context.User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Gran Chaco</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebHotelGranChaco.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #0F4C75;">
            <div class="container">
                <img src="~/Imagenes/Logo/c2.png" alt="Hotel Gran-Chaco Logo" width="50px" height="50px">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hotel Gran-Chaco</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-add"></i>
                                Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <i class="bi bi-people"></i>
                                Lista de clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Registro" asp-action="Index">
                                <i class="bi bi-cloud-check"></i>
                                Registro de cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Habitacion" asp-action="Index">
                                <i class="bi bi-hospital"></i>
                                Habitaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="TipoHabitacion" asp-action="Index">
                                <i class="bi bi-building-down"></i>
                                Tipos de habitaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ReporteRotativa" asp-action="PreviaVisualizacion">
                                <i class="bi bi-building-down"></i>
                               Reporte
                            </a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item enlace-amarillo">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="CerrarSesion">
                                    <i class="bi bi-x-square"></i>
                                    Cerrar sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-speedometer2"></i>
                                    Privacy
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="b-example-divider"></div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - WebHotelGranChaco - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <p class="float-end"><a href="#">Volver arriba</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

